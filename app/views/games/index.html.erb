<div class='row'>
<% if current_user %>
  <%= link_to "Create New Game", new_game_path %>
<% end %>
<div id="" class="">
    <% @games.each do |game| %>
    <%= link_to game_path(game) do %>
    <div class="col-md-4 game">
      <h2><%= game.title %></h2>      
      <p><%= image_tag game.photo.url(:medium), class: "" %></p>
      <p><%= game.description %></p>
    </div>
    <% end %>
    <% end %>
  </div>
</div>
</div>
