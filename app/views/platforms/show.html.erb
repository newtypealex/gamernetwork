<div class="row">
  <div class="col-md-12">
<p>
  <strong>Platform Name:</strong> <%= @platform.name %>
</p>
<p>
  <%= image_tag @platform.photo.url(:large), class: "" %>  
</p>
<% if current_user %>
<%= link_to "EDIT", edit_platform_path(@platform) %>
<%= link_to "DELETE", platform_path(@platform), method: :delete, data: {confirm: "Are you sure you want to delete this platform?"}%>
<% end %>
</div>
</div>
<hr />


<div class="row">    
    <h3>Posts</h3>

    <% @posts.each do |post| %>
    <div class="col-md-4 post">
      <%= link_to post_path(post) do %>
      <div>
      <h4><%= post.title %></h4>
      <p><%= image_tag post.photo.url(:medium), class: "" %></p>
      <p><%= post.body %></p>
      <p>on <%= post.created_at.to_formatted_s(:long) %></p>
      </div>
      <% end %>
      <h6>Comments</h6>
      <% @comments = post.comments %>
      <% @comments.each do |comment| %>
      <p><%= comment.body %>
      by: <%= "#{comment.user.email}"+' on '+"#{comment.created_at.to_formatted_s(:long)}" %></p>
        <% end %>
      </div>
      <% end %>
  </div>
</div>