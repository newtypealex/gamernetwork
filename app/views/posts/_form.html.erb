<%= form_for @post, html: { multipart: true } do |f| %>

<% if @post.errors.any? %>
<% @post.errors.full_messages.each do |message| %>
<p><%= message %></p>
<% end %>
<% end %>

<p>
<%= f.label :title %><br>
<%= f.text_area :title, cols: "80", rows:"1" %>
</p>

<%= f.label :photo %><br>
<p>
  <%= image_tag @post.photo.url(:large), class: "" %>
</p>
<p>
  <%= f.file_field :photo  %>
</p>

<p>
<%= f.label :teaser %><br>
<%= f.text_area :teaser, cols: "100", rows: "5" %>
</p>

<p>
<%= f.label :body %><br>
<%= f.text_area :body, cols: "100", rows: "15" %>
</p>

<h4>Tags</h4>
  <p>
  <%= collection_check_boxes(:post, :tag_ids, Tag.all, :id, :name)%>
  </p>


<%= f.hidden_field :user_id, value: current_user.id %>

<%= f.submit %>
<% end %>
<hr/>