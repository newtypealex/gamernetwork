<%= form_for @post do |f| %>

<% if @post.errors.any? %>
<% @post.errors.full_messages.each do |message| %>
<p><%= message %></p>
<% end %>
<% end %>

<p>
<%= f.label :title %><br>
<%= f.text_field :title %>
</p>

<p>
<%= f.label :body %><br>
<%= f.text_area :body %>
</p>

<%= f.hidden_field :user_id, value: current_user.id %>

<%= f.submit %>
<% end %>