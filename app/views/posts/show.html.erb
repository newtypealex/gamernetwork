


<div class="row">
  <div class="col-md-6">
    <%= link_to "Posts", posts_path %>

    <h1><%= @post.title %></h1>
    <p><strong>Post Body:</strong> <%= @post.body %></p>
    <p><strong>by:</strong><%= @post.user.email %></p>

  <% if @post.user == current_user %>
    <%= link_to "EDIT", edit_post_path(@post) %>
    <%= link_to "DELETE", post_path(@post), method: :delete, data: {confirm: "Are you sure you want to delete this post?"}%>
    <% end %>
  </div>
  <div class="col-md-6">  
    <% if current_user %>
      <h3>Add Comment</h3>
      <%= form_for @comment do |f| %>
        <p>
          <%= f.label :comment %><br/>
          <%= f.text_field :body %>
        </p>
        <%= f.hidden_field :post_id, value: @post.id %>
        <%= f.hidden_field :user_id, value: current_user.id %>
        <%= f.submit %>
      <% end %>
    <% end %>
    
    <h3>Comments</h3>
    <% @comments.each do |comment| %>
      <p><%= comment.body %></p>
      <p>by: <%= "#{comment.user.email}"+' on '+"#{comment.created_at}" %></p>
      <hr/>
    <% end %>
  </div>
</div>

    
