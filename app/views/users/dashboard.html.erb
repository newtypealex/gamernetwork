<h1>Users#dashboard</h1>
<p>Find me in app/views/users/dashboard.html.erb</p>
<p>YAY!</p>

<div id="user-panel" class='col-md-4'>
  <p>User Panel Area</p>
</div>

<div class="col-md-6">
    
    <% if current_user %>
      <h3>Add Post</h3>
      <%= form_for @post do |f| %>
        <p>
          <%= f.label :title %><br/>
          <%= f.text_field :title %>
        </p>

        <p>
          <%= f.label :body %><br/>
          <%= f.text_area :body %>
        </p>

        <%= f.hidden_field :user_id, value: current_user.id %>

        <%= f.submit %>
      <% end %>
    <% end %>
    
    <h3>Post</h3>

    <% @posts.each do |post| %>
      <p>From: <%= post.user.email %></p>
      <p>title: <%= post.title %></p>
      <p><%= post.body %></p>
      <p><%= post.created_at %></p>
      <hr/>
    <% end %>
  </div>
</div>
