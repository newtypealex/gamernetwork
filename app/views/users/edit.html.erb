<div class="row">
  <div class="col-md-8">
<h2>Edit User</h2>

<%= form_for @user do |f| %>
  
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>
<br/>



<%= form_for @user do |f| %>
<%= f.label :photo %><br>
<p>
  <%= image_tag @user.photo.url(:large), class: "" %>
</p>
  <p>
    <%= f.file_field :photo  %>
  </p>  
     <%= f.submit %>
 <% end %>

 </div>

<div class="col-md-4">
<h1>Following</h1>
<h3>Followed Games</h3>
 <%= form_for @user do |f| %>
  <p>
  <%= collection_check_boxes(:user, :game_ids, Game.all, :id, :title)%>
  </p>
     <%= f.submit %>
 <% end %>

<h3>Followed Platforms</h3>
 <%= form_for @user do |f| %>
  <p>
  <%= collection_check_boxes(:user, :platform_ids, Platform.all, :id, :name)%>
  </p>
     <%= f.submit %>
 <% end %>

  <h3>Followed Developers</h3>
 <%= form_for @user do |f| %>
  <p>
  <%= collection_check_boxes(:user, :developer_ids, Developer.all, :id, :name)%>
  </p>
   <%= f.submit %>
 <% end %>
<br/>
</div>
</div>
